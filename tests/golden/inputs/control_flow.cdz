function testIfElse(x: int) -> string {
    if x > 10 {
        return "large"
    } else {
        if x > 5 {
            return "medium"
        } else {
            return "small"
        }
    }
}

function testGuard(x: int) -> int {
    guard x > 0 else {
        return 0
    }
    return x * 2
}

function testNestedControl(x: int, y: int) -> string {
    if x > 0 {
        guard y > 0 else {
            return "x positive, y not positive"
        }
        return "both positive"
    } else {
        return "x not positive"
    }
}